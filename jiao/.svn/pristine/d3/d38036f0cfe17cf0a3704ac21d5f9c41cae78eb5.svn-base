body {
  background-color: #f8f8f8;
}
.font {
  font-family: PingFangSC-Medium, PingFang SC;
}
.order_header {
  width: 100%;
  height: 0.9rem;
  background-color: #ffffff;
}
.order_header_content {
  width: 4.86rem;
  height: 0.88rem;
  font-size: 0.28rem;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order_header_content > li {
  line-height: 0.88rem;
}
.order_header_content > li > a {
  color: #686868;
  padding: 0.3rem 0;
  font-weight: 500;
  font-family: Source Han Sans CN;
}
.active {
  border-bottom: 0.06rem solid #ff6673;
}
.order_container {
  width: 6.92rem;
  height: 10rem;
  margin: 0.4rem auto 0.2rem;
}
.order_container > ul > li {
  width: 6.9rem;
  height: 3.62rem;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0.01rem 0.01rem 0.24rem 0rem rgba(210, 210, 210, 1);
  border-radius: 0.2rem;
  display: flex;
  align-items: center;
  justify-content: center;
}
.order_container_box {
  height: 2.9rem;
  width: 6.2rem;
}
.order_name{
    height: 0.24rem;
    font-size: 0.24rem;
    line-height: 0.24rem;
    color: #888888;
}
.order_name>img{
    width: 0.24rem;
    height: 0.24rem;
    margin-right: 0.12rem;
}
.order_name>p:nth-of-type(1){
    margin-right: 0.34rem;
}
.order_name>p:nth-of-type(3){
    color: #FF6673;
}