<title>注册</title>

<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<link rel="stylesheet" href="./css/phone.css">
<script src="./js/media_750.js"></script>
</head>
<body>
    <div id="app">
        <div class="phone_content">
            <input type="text" placeholder="请输入正确的手机号"  @blur="getPhone" v-model="user.phone">
            <button @click="getPhone">领取店长注册码</button>
        </div>
    </div>
    <script>
        new Vue({
           el:"#app",
           data:{
               user:{
                   phone:""
                   }
           },
        methods: {
             getPhone: function () {
                console.log('666')
            }, 
            getPhone:function(){
                 let reg = /^1[34578]\d{9}$/;
                if (reg.test(this.user.phone) && !this.user.phone == "") {
                    return true
                }
            
            }
        }
              
        });
    </script>
</body>
