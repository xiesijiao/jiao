* {
  margin: 0;
  padding: 0;
}
a {
  text-decoration: none;
  color: black;
}
li {
  list-style: none;
}
body {
  background-color: #eaeaea;
}
#app {
  -webkit-user-select: none;
  -webkit-text-size-adjust: none;
  font-family: helvetica;
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  margin: 0 auto;
}
[v-cloak] {
  display: none;
}
.bind_card_div{
    width: 5.34rem;
    height: 2.86rem;
    background-image: url("../images/bank_card/band_card.png");
    background-size: 100% 100%;
    margin: 2.83rem 0.46rem 0.68rem 1.7rem;
}
.bind_card_div_p{
    font-size: 0.28rem;
    color:rgba(51,46,46,1);
    text-align: center;
}
.bind_card_btn{
    width: 6.18rem;
    height: 1rem;
    background-color:#EE4330;
    margin-left: 0.67rem;
    border-radius: 0.2rem;
}
.bind_card_btn_font{
    width: 5.78rem;
    height: 0.9rem;
    margin:  0.68rem auto 0;
    font-size: 0.42rem;
    color: #FFFFFF;
    display: flex;
}
.add_img{
    width: 0.4rem;
    height: 0.42rem;
    margin-top: 0.3rem;
    margin-left: 1.62rem;
    margin-right: 0.2rem;
}
.bind_card_btn_font>span{
    margin-top: 0.22rem;
}
