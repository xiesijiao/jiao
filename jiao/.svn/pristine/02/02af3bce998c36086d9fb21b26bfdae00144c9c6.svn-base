/* 弹窗 */
.card{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    display: flex;
    justify-content: center;
    align-items: center;
}
.card_success{
    width: 5.5rem;
    height: 7.01rem;
    background-color: #fff;
    border-radius: 0.2rem;
    text-align: center;
}
.card_success>img{
    width: 2.96rem;
    height: 1.68;
    margin: 0.5rem 1.27rem 0.2rem;
}
.card_success>p{
    color: #EE4330;
    font-size: 0.46rem;
    font-weight: bold;
}
.success_btn{
    width: 3.14rem;
    height: 1.4rem;
    margin: 0.7rem auto 0;
    background-image: url("../images/bank_card/btn.png");
    background-size: 100% 100%;
    font-size: 0.42rem;
    color: #fff;
    font-weight: bold;
    line-height: 1rem;
}


.card_center1{
   width: 3rem;
    height: 1rem;
    background:rgba(51,51,51,0.6);
    position: fixed;
    top: 3.4rem;
    left: 2rem;
    z-index: 999;
    border-radius: 0.2rem;
    font-size: 0.24rem;
    color: #fff;
    line-height: 1rem;
    text-align: center;
}

/* 绑定银行卡2 */
.card_center{
    width: 6.78rem;
    height: 6.7rem;
    background-color: #fff;
    border-radius: 0.2rem;
    margin: 0.5rem 0.36rem 0;
    display: flex;
    justify-content: center;
    align-items: center;
}
.card_center_info{
    width: 6.24rem;
    height: 6rem;
}
.title{
