    font-weight: bold;
}
.card_img{
    width: 6.24rem;
    height: 3.7rem;
    background-image: url("../images/bank_card/card.png");
    background-size: 100% 100%;
    margin-top: 0.3rem;
    margin-bottom: 0.35rem;  
    color: #fff;
}
.card_img_one{
     font-size: 0.28rem;  
     padding: 0.3rem;
}
.card_img_one>p{
    margin-bottom: 0.2rem;
    margin-right: 0.2rem;
}

.card_img_p_one{
    font-size: 0.36rem;
    font-weight: bold;
    padding-left: 0.3rem;
}
.name_div{
    width: 5rem;
