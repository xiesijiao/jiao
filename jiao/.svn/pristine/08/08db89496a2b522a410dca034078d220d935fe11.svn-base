* {
  margin: 0;
  padding: 0;
  -webkit-tap-highlight-color:transparent;
}
a {
  text-decoration: none;
  color: black;
}
li {
  list-style: none;
}
body {
  background-color: #eaeaea;
}
#wrapper {
  -webkit-user-select: none;
  -webkit-text-size-adjust: none;
  font-family: helvetica;
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  margin: 0 auto;
}
[v-cloak] {
  display: none;
}
.header_suf {
  width: 100%;
  height: 0.88rem;
  background: rgba(255, 0, 0, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.header_suf_box {
  width: 100%;
  height: 3.75rem;
  background-image: url("../images/publicity/rectangle.png");
  background-size: 100% 100%;
}
.header_suf_top {
  width: 6.78rem;
  height: 0.54rem;
  display: flex;
  justify-content: space-between;
}
.header_suf_top_img {
  width: 0.54rem;
  height: 0.54rem;
}
/* 轮播图样式 */
.swiper-container {
  height: 4rem;
  margin-top: 0.5rem;
}
.swiper-slide > img {
  width: 7.1rem;
  height: 3.6rem;
  margin: 0 0.2rem;
  border-radius: 0.2rem;
  transform: scale(0.9);
  box-shadow: 0 0.1rem 0.1rem rgba(0, 0, 0, 0.1);
}

.swiper-slide-active > img {
  width: 7.2rem;
  height: 4rem;
  box-shadow: 0 0.1rem 0.1rem rgba(0, 0, 0, 0.1);
}
/* 内容部分 */
.suf_center {
  width: 6.74rem;
  height: 10rem;
  margin: 0 auto;
}
.title_div {
  width: 5.2rem;
  height: 0.6rem;
  margin: 1.6rem auto 0.4rem;
  line-height: 0.5rem;
  display: flex;
  justify-content: space-around;
}

.title_div li {
  height: 0.5rem;
  text-align: center;
}

.title_div > li > a {
  font-size: 0.3rem;
  padding-bottom: 0.16rem;
  font-weight: bold;
  width: 1.13rem;
}
.title_div > li > p {
  margin-top: 0.2rem;
  font-size: 0.3rem;
  color: #5e5e5e;
}
/* 点击切换 */
.active {
  color: red;
  border-bottom: 0.03rem solid red;
}
.two_active{
  color: red;
}

/* 今日值得买 */
.suf_center_today {
  width: 6.78rem;
  height: 4.61rem;
  background: rgba(255, 255, 255, 1);
  border-radius: 0.2rem;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 0.6rem;
}
.suf_center_today_box {
  width: 6.18rem;
  height: 3.99rem;
}
.suf_center_today_box_one {
  margin-top: 0.02rem;
  height: 0.53rem;
  border-bottom: 0.4px solid #EAEAEA;
  font-size: 0.24rem;
  font-family: '微软雅黑';
  line-height: 0.27rem;
  font-weight: bold;
  display: flex;
}

.today_box_one_p {
  color: red;
  margin-right: 0.1rem;
}
.today_box_two_p{
  margin-left: 0.1rem;
}

.changeColor {
  color: red;
}

.suf_center_today_box_two {
  width: 6.18rem;
  height: 3.18rem;
  margin-top: 0.29rem;
}
.today_box_two_shop {
  display: flex;
  justify-content: space-between;
}
.today_box_two_shop > li {
  width: 2.16rem;
  height: 3.18rem;
}
.shop_display {
  width: 2.16rem;
  height: 3.18rem;
}
.shop_display_img {
  width: 1.86rem;
  height: 1.86rem;
  border-radius: 0.12rem;
  margin: 0 0.1rem;
}
.shop_display_font {
  width: 1.8rem;
  height: 0.28rem;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  text-align: center;
}
.shop_display_font > p {
  margin-top: -0.2rem;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 0.28rem;
  font-family: '微软雅黑';
}
.shop_display_price {
  margin-top: 0.16rem;
  height: 0.66rem;
}
.shop_display_price_one {
  width: 0.55rem;
  height: 0.28rem;
  font-size: 0.2rem;
  font-family: '微软雅黑';
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
  line-height: 0.28rem;
  text-decoration: line-through;
}
.shop_display_price_two {
  width: 0.93rem;
  height: 0.44rem;
  font-size: 0.36rem;
  font-family:'微软雅黑';
  font-weight: bold;
  color: rgba(255, 0, 0, 1);
  line-height: 0.44rem;
}
.suf_center_selected {
  width: 6.84rem;
  height: 0.6rem;
   margin-top: 0.3rem;
}

.suf_center_selected > ul {
   width: 6.84rem;
  height: 0.6rem;
  font-size: 0.28rem;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
  overflow-x: auto;
  overflow-y: auto;
  white-space: nowrap;
  font-family: '微软雅黑';
  font-weight: bold;
  line-height: 0.6rem;
}
.suf_center_selected > ul::-webkit-scrollbar{
  display: none;
}
.suf_center_selected > ul>li{
  width: 1.4rem;
  text-align: center;
  margin: 0 0.26rem;
}
.suf_center_selected > ul>li:first-child{
  font-size: 0.28rem;
  width: 1rem;
  text-align: center;
}





/* 精选 */
.suf_center_selected_box{
   width: 6.84rem; 
}
.suf_center_selected_box>ul{
  width: 6.84rem;
}
.suf_center_selected_box>ul>li{
  float: left;
  border-radius: 0.2rem;
}


.suf_center_selected_box_demo{
  width:3.29rem;
  height:5.03rem;
   background:rgba(255,255,255,1);
   border-radius:0.2rem;
   margin-top: 0.16rem;
   margin-right: 0.13rem;
}
.selected_box_demo_img{
  border-radius:0.2rem;
  height:3.29rem;
  width: 3.29rem;
}
.selected_box_demo_font{
  width:2.57rem;
height:0.80rem;
font-size:0.28rem;
font-family:'微软雅黑';
font-weight:bold;
color:rgba(51,51,51,1);
line-height:0.4rem;
word-break: break-all;
word-wrap: break-word;
margin-left: 0.3rem;
}
.selected_box_demo_font>p{
  margin-top: -1.6rem;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 0.28rem;
  font-family: '微软雅黑';
  
}
.selected_box_demo_price{
    margin-top: -0.4rem;
    margin-left: 0.3rem;
}
.selected_box_demo_price_two,.selected_box_demo_price_one{
  display: inline-block;
}
.selected_box_demo_price_one{
  margin-left: 0.1rem;
}
/* 价格的另外样式 */
.selected_box_demo_price_one_else{
  margin-left: -0.2rem;
}
