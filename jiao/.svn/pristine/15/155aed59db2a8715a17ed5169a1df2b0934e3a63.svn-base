body {
  background-color: #fff;
}
.task_list_wrapper {
  display: flex;
  flex-direction: column;
}
.task_list_header,
.task_list_header > img {
  height: 3.4rem;
  width: 100%;
}
.task_list_content {
  width: 100%;
  background-color: #fff;
  margin-top: -0.4rem;
  border-radius: 0.15rem;
}
.task_list_content_div {
  width: 6.9rem;
  height: 1.84rem;
  margin: 0.2rem auto;
  box-shadow: 0rem 0.2rem 0.2rem -0.2rem #e8e8e8;
}
.task_list_content > ul > li:first-child {
  margin-top: 0.4rem;
}
.task_list_content_div_left {
  width: 3.64rem;
  height: 1.84rem;
}
.task_list_content_div_right {
  width: 1.8rem;
  height: 1.84rem;
  display: flex;
  align-items: center;
  justify-content: center;
}
.task_list_content_div_right > div {
  width: 1.8rem;
  height: 0.7rem;
  border-radius: 0.34rem;
  font-size: 0.28rem;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
}

.task_btn_one {
  box-shadow: 0.04rem 0.07rem 0.2rem 0 #e8e8e8;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 0.7rem;
  background: linear-gradient(
    152deg,
    rgba(222, 222, 222, 1),
    rgba(154, 153, 153, 1)
  );
}
.task_list_content_div_left > h1 {
  font-size: 0.36rem;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(239, 112, 98, 1);
}
.task_list_content_div_left>p{
    font-size: 0.24rem;
     font-family: PingFangSC-Medium, PingFang SC;
     font-weight:400;
    color:rgba(130,130,130,1);
}
.time_div{
    margin-top: 0.1rem;
    width: 1.68rem;
    border-radius: 0.12rem;
    height: 0.28rem;
   background:linear-gradient(-9deg,rgba(47,63,144,1),rgba(96,118,230,1));
   font-size: 0.2rem;
   color: #fff;
   text-align: center;
   line-height: 0.28rem;
}